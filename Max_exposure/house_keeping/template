    function MyWindowOpener(imgname) {
        msgWindow=open("","displayname","toolbar=no,directories=no,menubar=no,location=no,scrollbars=yes,status=no,width=1100,height=1050,resize=yes");
        msgWindow.document.close();
        msgWindow.document.write("<html><head><title>CTI plot:   "+imgname+"</title></head>");
        msgWindow.document.write("<body bgcolor='white'>");
        msgWindow.document.write("<img src='./"+imgname+"' border=0 width=900 height=900></body></html>");
        msgWindow.focus();
    }
</script>


